<div class="container">
  <section class="header">
    <h1 class="title">X Marks Your Start</h1>
    <h4>Enter your birthday</h4>
    <input class="four" type="date" placeholder="" id="birthdayInput"> <br>

    <fieldset id="checkArray">
      <label class="">
      <input type="checkbox" value="unusual" name="check[]" id="checkUnusual">
      <span class="label-body">I was born early or late</span>
      </label>
    </fieldset>

    <div id="moreOptions">
      <div class="toggle-btn-grp">
        <h5>I was born </h5>
        <input class="four" type="number" placeholder="" id="actualBirthInput">
        <h5> weeks: </h5>
        <label onclick="" class="toggle-btn button label-body"><input type="radio" id="early" name="group2"/>Early</label>
        <label onclick="" class="toggle-btn button label-body"><input type="radio" id="late" name="group2"/>Late</label>
      </div>
    </div>

    <br>
    <button id="birthdayInputButton">Submit</button>

    <div class="birthdayError"></div>

    <hr>

    <h4 id="conceptionRange"></h4>

    <div class="value-props row">
      <div class="four columns value-prop">
        <%= fa_icon "calendar-times-o 4x" %>
        <h3>Events</h3>
      </div>
      <div class="four columns value-prop">
        <%= fa_icon "headphones 4x" %>
        <h3>Songs</h3>
      </div>
      <div class="four columns value-prop">
        <%= fa_icon "film 4x" %>
        <h3>Movies</h3>
      </div>
    </div>
    <div class="value-props row">

      <div class="four columns value-prop">
        <p id="events"></p>
      </div>

      <div class="four columns value-prop">
        <p id="songs"></p>
      </div>

      <div class="four columns value-prop">
        <p id="movies"></p>
      </div>
    </div>
  </section>

  <section class="data-returned">
    <div class="value-props row share">
      <div class="six columns value-prop facebook"></div>
      <div class="six columns value-prop twitter"></div>
    </div>
    <div class="value-props row share">
      <div class="twelve columns value-prop email">
        <input class="four" type="email" placeholder="Enter a friends email" id="emailInput"> <br>
        <input class="four" type="email" placeholder="Enter your name" id="senderInput"> <br>
        <button class="emailInputButton">Share Over Email</button>
        <button id="emailSubmitButton">Submit</button>
      </div>
    </div>
    <div class="value-props row">
      <div class="error">
      </div>
    </div>
  </section>
  <hr>

  <div class="spacer"></div>
  <nav class="navbar">
    <div class="container">
      <ul class="navbar-list">
        <li class="navbar-item">
          <a class="navbar-link about">About</a>
         </li>
         <p id="about-text">
           X Marks Your Start was developed by Jessica Noglows for her Ada Developers Academy capstone project.  The app is built in Ruby on Rails and leverages a DynamoDB database for data storage, Travis for deployment, and a variety of other technologies.
         </p>
      </ul>
    </div>
  </nav>
  <hr>

</div>
